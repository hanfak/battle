<%= @game.turn.name %>'s turn <br>
<%= @game.player1.name %> v <%= @game.player2.name %> <br>
<%= @game.player1.name %>: <%= @game.player1.hp %>HP <br>
<%= @game.player2.name %>: <%= @game.player2.hp %>HP <br>
<form action='/check_attack' method='post'>
  <button type='submit' id='attack_button' value=':normal' name='attack_type'>Normal Attack <%= @game.opposing.name %></button>
</form>
<form action='/check_attack' method='post'>
  <button type='submit' id='fixed_button' value=':fixed' name='attack_type'>Fixed Attack <%= @game.opposing.name %></button>
</form>
