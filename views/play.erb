<link rel="stylesheet" type="text/css" href="/general.css">

<%= @game.turn.name %>'s turn <br>
<%= @game.player1.name %> v <%= @game.player2.name %> <br>
<%= @game.player1.name %>: <%= @game.player1.hp %>HP <br>
<%= @game.player2.name %>: <%= @game.player2.hp %>HP <br>
<form action='/check_attack' method='post'>
  <button type='submit' id='attack_button' value='normal' name='attack_type'>Attack <%= @game.opposing.name %> with a Normal Punch</button>
</form>
<form action='/check_attack' method='post'>
  <button type='submit' id='fixed_button' value='fixed' name='attack_type'>Attack <%= @game.opposing.name %> with a Calibrated Punch</button>
</form>
<form action='/check_attack' method='post'>
  <button type='submit' id='cure_button' value='cure' name='attack_type'>Mend your wounds, <%= @game.turn.name %></button>
</form>
